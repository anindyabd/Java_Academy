%html{:lang => "en"}
  %head
    %meta{:charset => "UTF-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Editor
  %body
    #lesson
      %h1 Java Academy
      %p= "Lesson " << @lesson.number.to_s
      %p= @lesson.description
      %p= @lesson.instruction
      %p= @lesson.testcases
      %p= @lesson.expectedresults
    #editor
      %pre
        = @lesson.skeleton_code
    #submit_button
      %button{:type => "submit"} Submit
    %script{:charset => "utf-8", :src => "src/ace.js", :type => "text/javascript"}
